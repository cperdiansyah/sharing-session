{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    // "baseUrl": "./src",
    "baseUrl": "./node_modules",
    "rootDir": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "./@types/*",
        "./*",
        "../src/@types"
      ]
    },
    "types": [
      "node",
      "express"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}